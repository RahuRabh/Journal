<%- include('partials/header'); %>

    <% if (title !== "Not Found" ) { %>
        <h1>
            <%= title %>
        </h1>
        <p>
            <%= content %>
        </p>
        <form action="/delete" method="post">
            <button type="submit" name="deleteButton" 
            value= "<%= title %>" >Delete
                Post</button>
        </form>
        <% } else { %>
            <h1 style="text-align:center; margin-top: 80px; color: red;"> Post Not Found</h1>
            <% } %>

<%- include("partials/footer") -%>