<%- include('partials/header'); %>
    <h1>Compose your Journal</h1>
    <form class="" action="/compose" method="post" autocomplete="off">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="postTitle">
        </div>
        <div class="form-group">
            <label for="">Post</label>
            <textarea class="form-control" name="postBody" rows="5" cols="35"></textarea>
        </div>
        <button type="submit" class="btn btn-primary float-right" name="button">Publish</button>
    </form>

    <%- include('partials/footer'); %>